<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/black"
        tools:context=".ui.fragment.popular.PopularFragment"
        android:paddingBottom="?attr/actionBarSize">

        <TextView
            android:id="@+id/popularText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_6sdp"
            android:fontFamily="@font/alice"
            android:text="Popular"
            android:textColor="@color/golden_yellow"
            android:textSize="@dimen/_20ssp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.015"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/popularRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_5sdp"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/_5sdp"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintEnd_toEndOf="@+id/popularText"
            app:layout_constraintStart_toStartOf="@+id/popularText"
            app:layout_constraintTop_toBottomOf="@+id/popularText"
            tools:listitem="@layout/popularrvlayout" />

        <TextView
            android:id="@+id/upcomingMovieTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_6sdp"
            android:fontFamily="@font/alice"
            android:text="Upcoming Movies"
            android:textColor="@color/golden_yellow"
            android:textSize="@dimen/_19ssp"
            app:layout_constraintEnd_toEndOf="@+id/popularText"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/popularText"
            app:layout_constraintTop_toBottomOf="@+id/popularRecyclerView" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/upcomingMovieRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_5sdp"
            android:orientation="horizontal"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintEnd_toEndOf="@+id/upcomingMovieTitle"
            android:layout_marginTop="@dimen/_4sdp"
            app:layout_constraintStart_toStartOf="@+id/upcomingMovieTitle"
            app:layout_constraintTop_toBottomOf="@+id/upcomingMovieTitle"
            tools:listitem="@layout/upcomingrvlayout"/>

        <TextView
            android:id="@+id/upComingTvSeriesTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_6sdp"
            android:fontFamily="@font/alice"
            android:text="Tv Series Of This Week"
            android:textColor="@color/golden_yellow"
            android:textSize="@dimen/_19ssp"
            app:layout_constraintEnd_toEndOf="@+id/upcomingMovieTitle"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/upcomingMovieTitle"
            app:layout_constraintTop_toBottomOf="@+id/upcomingMovieRecyclerView" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/upComingTvSeriesRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_5sdp"
            android:orientation="horizontal"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintEnd_toEndOf="@+id/upComingTvSeriesTitle"
            app:layout_constraintHorizontal_bias="0.028"
            app:layout_constraintStart_toStartOf="@+id/upComingTvSeriesTitle"
            app:layout_constraintTop_toBottomOf="@+id/upComingTvSeriesTitle"
            tools:listitem="@layout/upcomingrvlayout"/>

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp"
            android:fontFamily="@font/alice"
            android:text="Movies Of This Week"
            android:textColor="@color/golden_yellow"
            android:textSize="@dimen/_19ssp"
            app:layout_constraintEnd_toEndOf="@+id/upComingTvSeriesRecyclerView"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/upComingTvSeriesRecyclerView"
            app:layout_constraintTop_toBottomOf="@+id/upComingTvSeriesRecyclerView" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/MoviesOfThisDayRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/_10sdp"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintEnd_toEndOf="@+id/textView2"
            app:layout_constraintStart_toStartOf="@+id/textView2"
            app:layout_constraintTop_toBottomOf="@+id/textView2"
            tools:listitem="@layout/movie_rv_layout" />

        <ProgressBar
            android:id="@+id/popularLoader"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_40sdp"
            android:layout_marginTop="@dimen/_280sdp"
            android:layout_marginBottom="795dp"
            android:indeterminateTint="@color/golden_yellow"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.532"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
